  #inputName {
    width: 685px;
  }

  #inputAddress {
    width: 685px;
  }


  body {
    background-color: rgba(255, 156, 156, 0.815);
  }
</style>


<script>

    $(document).ready(function(){
      $.getJSON("http://localhost:3000/resultEmailAlterar", function (result) {
        
        if (result == 1){
          $('#info').css('display','block');
        }
        else {
          $('#info').css('display','none');
        }
        
        });
      });
    
      </script>